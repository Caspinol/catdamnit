<div class="cd-header">
    <div class="cd-header-logo">
        <p>{{title}}</p>        
    </div>
    <div class="cd-header-nav">
        <ul class="cd-nav-items">
            <li class="link"><a href="/">Home</a></li>
            {{#each posts}}
            <li class="link"><a href="#">{{ tagname }}</a>
                {{#if posts}}
                <ul> 
                    {{#each posts}}
                    <li class="link"><a href="/post/{{postid}}">
                        {{post_title}}</a>
                    </li>
                    {{/each}}
                </ul>
                {{/if}}
            </li>    
            {{/each}}
            {{#if user}}
            <li class="link"><a id="cd-new-post" href="#">New Post</a></li>
            <li class="link"><a href="/cvedit">CV</a></li>
            {{/if}}
            <li class="link"><a href="/about">Me</a></li>
         </ul> <!-- End of cd-navbar-items -->
        <div class="cd-nav-menu">
            <div class="cd-nav-menu-content">
                <ul>
                    <li class="link">
                        {{#if user}}
                        <a href="/logout">Logout</a>
                        {{else}}
	                    <a id="cd-login" href="#">Login</a>
                        {{/if}}
	                </li>
                </ul>
            </div>
            <div class="cd-nav-menu-btn link">
                <a><div class="menu-symbol"> </div></a>
            </div>
        </div> <!-- End of cd-nav-menu -->
    </div>      
</div> <!-- End of cd-header -->
